<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                @Html.Action("Area", new { areaName = TempData["areaName"]})
                @Html.Action("Category", "Shopping", new { areaName = TempData["areaName"] })           
            </div>
            <div class="col-sm-9 padding-right">
                @Html.Action("Products", "Shopping", 
                            new { areaName = TempData["areaName"], 
                                  categoryName = TempData["categoryName"] })                                  
            </div>
        </div>
    </div>
</section>

@Html.Hidden("areaName")
@Html.Hidden("categoryName")