@model CelloStore.ViewModels.ArticleViewModel

@{
    ViewBag.Title = Model.Subject;
}

<div class="container">
    @if(Model.Content != null)
    {
        if(Model.IsPublished)
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="page-header">
                        <h3>@Model.Subject</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.Raw(Model.Content)
                </div>
            </div>
        }
        else
        {
            <div class="well well-lg text-center">
                <div class="alert alert-danger">
                    Sorry, your requested page cannot be found.
                    <br /><br />
                    <p>
                        Click <a href="@Href("~/")">here</a> to return to the home page.
                    </p>
                </div>
            </div>
        }
    }
    else
    {
        <div class="well well-lg text-center">
            <div class="alert alert-danger">
                Sorry, your requested page cannot be found.
                <br /><br />
                <p>
                    Click <a href="@Href("~/")">here</a> to return to the home page.
                </p>
            </div>
        </div>
    }
</div>