@model CelloStore.ViewModels.Administration.Person.EditViewModel

<div class="container">
    <div class="page-header">
        <h4>Person</h4>
    </div>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmPerson", name = "frmPerson" }))
    {
        @Html.HiddenFor(m => m.Id)
        <div class="form-horizontal">
            @Html.ValidationSummary()

            <div class="form-group">
                <div class="col-md-2">Name :</div>
                <div class="col-md-10">
                    @Html.Kendo().TextBoxFor(m => m.FirstName).HtmlAttributes(new { placeholder = "First Name" })
                    @Html.Kendo().TextBoxFor(m => m.LastName).HtmlAttributes(new { placeholder = "Last Name" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Address :</div>
                <div class="col-md-10">
                    @Html.Kendo().TextBoxFor(m => m.Address).HtmlAttributes(new { placeholder = "Address", style = "width:600px" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-10">
                    @Html.Kendo().TextBoxFor(m => m.City).HtmlAttributes(new { placeholder = "City" })
                    @Html.Kendo().TextBoxFor(m => m.State).HtmlAttributes(new { placeholder = "State" })
                    @Html.Kendo().TextBoxFor(m => m.PostalCode).HtmlAttributes(new { placeholder = "Postal Code" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-2">Gender :</div>
                <div class="col-md-10">
                    @Html.Kendo().RadioButtonFor(m => m.Gender).Value("M").Label("Male").Checked(true)
                    &nbsp;&nbsp;&nbsp;
                    @Html.Kendo().RadioButtonFor(m => m.Gender).Value("F").Label("Female")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Birthday :</div>
                <div class="col-md-10">
                    @Html.Kendo().DatePickerFor(m => m.BirthDate)
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-2">Email :</div>
                <div class="col-md-10">
                    @Html.Kendo().TextBoxFor(m => m.Email).HtmlAttributes(new {type = "email", @style = "width:300px;"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Phone Number :</div>
                <div class="col-md-10">
                    @Html.Kendo().TextBoxFor(m => m.PhoneNumber)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">Role :</div>
                <div class="col-md-10">
                    @(Html.Kendo().DropDownListFor(m => m.RoleId)
                        .DataSource(ds => ds.Read("ListRole", "Person", new { area = "Administration"}))
                        .DataTextField("Name").DataValueField("Id"))
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-10">
                    @Html.Kendo().CheckBoxFor(m => m.IsVerified).Label("Is Verified")
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    @Html.Kendo().CheckBoxFor(m => m.IsActive).Label("Is Active")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2"></div>
                <div class="col-md-10">
                    <button type="submit" id="btnSave" name="btnSave" class="k-button"><span class="fa fa-save"></span> Save</button>
                    <a href="@Url.Action("Index")" class="k-button"><span class="fa fa-undo"></span> Back to List</a>
                </div>
            </div>
        </div>
    }
</div>

<script>
    $(function () {
        $("form:first").kendoValidator();
        $("#Name").focus();
    });
</script>